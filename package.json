{
  "name": "alfredos-renovations",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:e2e": "pnpm supabase:start:test && playwright test",
    "supabase:start:test": "supabase start --workdir ./tests",
    "supabase:stop:test": "supabase stop --workdir ./tests",
    "supabase:start:dev": "supabase start",
    "supabase:stop:dev": "supabase stop",
    "supabase:diff": "pnpm supabase:start:dev && supabase db diff --file $(date +\"%Y%m%d_%H%M%S\")_migration --schema private,public",
    "supabase:gen:types": "pnpm supabase:start:dev && supabase gen types typescript --db-url \"postgresql://postgres:postgres@localhost:54322/postgres\" > ./src/features/db/supabase/types.ts",
    "supabase:push:dev": "pnpm supabase:start:dev && supabase db push --db-url \"postgresql://postgres:postgres@localhost:54322/postgres\"",
    "supabase:reset:test": "pnpm supabase:start:test && ./supabase/scripts/copy-migrations-to-test.sh && supabase db reset --workdir ./tests"
  },
  "dependencies": {
    "@bprogress/next": "^3.2.12",
    "@mantine/core": "^7.17.4",
    "@mantine/dropzone": "^7.17.4",
    "@mantine/form": "^7.17.4",
    "@mantine/hooks": "^7.17.4",
    "@mantine/notifications": "^7.17.4",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.49.4",
    "@tabler/icons-react": "^3.31.0",
    "heic-convert": "^2.1.0",
    "next": "15.3.1",
    "next-intl": "^4.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.52.0",
    "@types/heic-convert": "^2.1.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^16.5.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.5.3",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "supabase": "^2.22.12",
    "typescript": "^5"
  }
}
